<div class="row">
  <!-- begin col-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <h3 style="margin-left:15px"><%= t("activerecord.models.requisitions") %></h3>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table id="data-table" class="table table-bordered table-hover table-striped nowrap" width="100%">
            <thead>
              <tr>
                                  <th><%= t("activerecord.attributes.requisition.income") %></th>
                                  <th><%= t("activerecord.attributes.requisition.address_years") %></th>
                                  <th><%= t("activerecord.attributes.requisition.company_years") %></th>
                                  <th><%= t("activerecord.attributes.requisition.marital_status") %></th>
                                  <th><%= t("activerecord.attributes.requisition.requested_amount") %></th>
                                  <th><%= t("activerecord.attributes.requisition.payment_terms") %></th>
                                  <th><%= t("activerecord.attributes.requisition.bank") %></th>
                                  <th><%= t("activerecord.attributes.requisition.comment") %></th>
                                  <th><%= t("activerecord.attributes.requisition.company_name") %></th>
                                  <th><%= t("activerecord.attributes.requisition.company_phone_number") %></th>
                                  <th><%= t("activerecord.attributes.requisition.dependents_number") %></th>
                                  <th><%= t("activerecord.attributes.requisition.company_position") %></th>
                                  <th><%= t("activerecord.attributes.requisition.has_sgmm") %></th>
                                  <th><%= t("activerecord.attributes.requisition.has_imss") %></th>
                                  <th><%= t("activerecord.attributes.requisition.has_car") %></th>
                                  <th><%= t("activerecord.attributes.requisition.profile_id") %></th>
                                <th style="width: 155px"></th>
              </tr>
            </thead>

            <tbody>
              <% @requisitions.each do |requisition| %>
              <tr>
                                  <td><%= requisition.income %></td>
                                  <td><%= requisition.address_years %></td>
                                  <td><%= requisition.company_years %></td>
                                  <td><%= requisition.marital_status %></td>
                                  <td><%= requisition.requested_amount %></td>
                                  <td><%= requisition.payment_terms %></td>
                                  <td><%= requisition.bank %></td>
                                  <td><%= requisition.comment %></td>
                                  <td><%= requisition.company_name %></td>
                                  <td><%= requisition.company_phone_number %></td>
                                  <td><%= requisition.dependents_number %></td>
                                  <td><%= requisition.company_position %></td>
                                  <td><%= requisition.has_sgmm %></td>
                                  <td><%= requisition.has_imss %></td>
                                  <td><%= requisition.has_car %></td>
                                  <td><%= requisition.profile_id %></td>
                                <td class="action-link">

                    <%= link_to requisition, :class => "btn btn-default", :title => t("actions.show") do %>
                      <i class="fa fa-eye"></i>
                    <% end %>

                    <%= link_to edit_requisition_path(requisition), :class => "btn btn-info", :title => t("actions.edit") do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>

                    <%= link_to requisition, :method => :delete, :data => { :confirm => t("are_you_sure?", model: t("activerecord.models.requisition").downcase) }, :class => "btn btn-danger", :title => t("actions.delete") do %>
                      <i class="fa fa-trash"></i>
                    <% end %>

                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">

        </div>
      </div>
      <!-- end panel-body -->
    </div>
    <!-- end panel -->
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->

<!-- begin row -->
<div class="row">
  <div class="col-md-12">

      <%= link_to new_requisition_path, :class => "btn btn-default" do %>
        <i class="icon-plus-sign-alt"></i>
        <%= t("actions.new") %>
      <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->
