<style media="screen">
  body{
    background-image: url(<%= asset_path 'greenbg.jpg' %>);
  }
</style>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6" style="text-align:center">
    <h2 style="color:white; font-weight:700;">Registrate para obtener tu crédito</h2>
    <hr>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, style: "color:white"  %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <br>
      <div class="field">
        <%= f.label :password, style: "color:white" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <br>
      <div class="actions">
        <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>

  </div>
  <div class="col-md-3"></div>
</div>
