<div class="row">
  <!-- begin col-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <h3 style="margin-left:15px"><%= t("activerecord.models.profiles") %></h3>
        </div>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table id="data-table" class="table table-bordered table-hover table-striped nowrap" width="100%">
            <thead>
              <tr>
                                  <th><%= t("activerecord.attributes.profile.first_name") %></th>
                                  <th><%= t("activerecord.attributes.profile.second_name") %></th>
                                  <th><%= t("activerecord.attributes.profile.second_last_name") %></th>
                                  <th><%= t("activerecord.attributes.profile.first_last_name") %></th>
                                  <th><%= t("activerecord.attributes.profile.birth_date") %></th>
                                  <th><%= t("activerecord.attributes.profile.curp") %></th>
                                  <th><%= t("activerecord.attributes.profile.rfc") %></th>
                                  <th><%= t("activerecord.attributes.profile.gender") %></th>
                                  <th><%= t("activerecord.attributes.profile.birth_state") %></th>
                                  <th><%= t("activerecord.attributes.profile.phone_number") %></th>
                                  <th><%= t("activerecord.attributes.profile.email") %></th>
                                  <th><%= t("activerecord.attributes.profile.provider") %></th>
                                  <th><%= t("activerecord.attributes.profile.uid") %></th>
                                  <th><%= t("activerecord.attributes.profile.name") %></th>
                                  <th><%= t("activerecord.attributes.profile.image") %></th>
                                <th style="width: 155px"></th>
              </tr>
            </thead>

            <tbody>
              <% @profiles.each do |profile| %>
              <tr>
                                  <td><%= profile.first_name %></td>
                                  <td><%= profile.second_name %></td>
                                  <td><%= profile.second_last_name %></td>
                                  <td><%= profile.first_last_name %></td>
                                  <td><%= profile.birth_date %></td>
                                  <td><%= profile.curp %></td>
                                  <td><%= profile.rfc %></td>
                                  <td><%= profile.gender %></td>
                                  <td><%= profile.birth_state %></td>
                                  <td><%= profile.phone_number %></td>
                                  <td><%= profile.email %></td>
                                  <td><%= profile.provider %></td>
                                  <td><%= profile.uid %></td>
                                  <td><%= profile.name %></td>
                                  <td><%= profile.image %></td>
                                <td class="action-link">

                    <%= link_to profile, :class => "btn btn-default", :title => t("actions.show") do %>
                      <i class="fa fa-eye"></i>
                    <% end %>

                    <%= link_to edit_profile_path(profile), :class => "btn btn-info", :title => t("actions.edit") do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>

                    <%= link_to profile, :method => :delete, :data => { :confirm => t("are_you_sure?", model: t("activerecord.models.profile").downcase) }, :class => "btn btn-danger", :title => t("actions.delete") do %>
                      <i class="fa fa-trash"></i>
                    <% end %>

                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="text-center">

        </div>
      </div>
      <!-- end panel-body -->
    </div>
    <!-- end panel -->
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->

<!-- begin row -->
  <%= link_to('Logout', destroy_profile_session_path, method: :delete) %>     
<div class="row">
  <div class="col-md-12">
      <%= link_to new_profile_path, :class => "btn btn-default" do %>
        <i class="icon-plus-sign-alt"></i>
        <%= t("actions.new") %>
      <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->
